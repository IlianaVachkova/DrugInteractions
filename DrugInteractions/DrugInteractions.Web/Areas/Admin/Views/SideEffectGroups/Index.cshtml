@model SideEffectGroupListingViewModel
@{
    ViewData["Title"] = "All Side Effect Groups";
}

<h2>@ViewData["Title"]</h2>

<br />
<a href="@Url.Action("Create", "SideEffectGroups")" class="btn btn-success">Create</a>
<br />
<br />
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Details</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sideEffectGroup in Model.SideEffectGroups)
        {
            <tr>
                <th>@sideEffectGroup.Name</th>
                <th><a href="#" class="btn btn-info">Details</a></th>
                <th><a href="@Url.Action("Update", "SideEffectGroups", new { sideEffectGroupId = sideEffectGroup.Id})" class="btn btn-warning">Update</a></th>
                <th><a href="@Url.Action("Delete", "SideEffectGroups", new { sideEffectGroupId = sideEffectGroup.Id})" class="btn btn-danger">Delete</a></th>
            </tr>
        }
    </tbody>
</table>