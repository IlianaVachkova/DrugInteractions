@model DrugGroupListingViewModel
@{
    ViewData["Title"] = "All Drug Droups";
}
<h2>@ViewData["Title"]</h2>
<br/>
<a href="@Url.Action("Create", "DrugGroups")" class="btn btn-success">Create</a>
<br/>
<br/>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Details</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var drug in Model.DrugGroups)
        {
            <tr>
                <th>@drug.Name</th>
                <th><a href="#" class="btn btn-info">Details</a></th>
                <th><a href="@Url.Action("Update", "DrugGroups", new { drugGroupId = drug.Id})" class="btn btn-warning">Update</a></th>
                <th><a href="@Url.Action("Delete", "DrugGroups", new { drugGroupId = drug.Id})" class="btn btn-danger">Delete</a></th>
            </tr>
        }
    </tbody>
</table>