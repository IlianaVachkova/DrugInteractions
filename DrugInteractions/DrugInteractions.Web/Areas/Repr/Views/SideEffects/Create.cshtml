@model SideEffectFormModel
@{
    ViewData["Title"] = "Create a Side Effect";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <span asp-validation-for="StatusMessage" class="text-danger"></span>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SideEffectGroupId"></label>
                <select asp-for="SideEffectGroupId" asp-items="Model.SideEffectGroups" class="form-control"></select>
                <span asp-validation-for="SideEffectGroupId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DrugIds"></label>
                <select asp-for="DrugIds" multiple="multiple" asp-items="Model.Drugs" class="form-control"></select>
                <span asp-validation-for="DrugIds" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success">Create Side Effect</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

