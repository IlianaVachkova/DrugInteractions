@model DrugFormModel
@{
    ViewData["Title"] = "Update Selected Drug";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="DateOfAddition" />
            <input type="hidden" asp-for="RepresentativeId">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActiveSubstances"></label>
                <input asp-for="ActiveSubstances" class="form-control">
                <span asp-validation-for="ActiveSubstances" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Excipients"></label>
                <input asp-for="Excipients" class="form-control">
                <span asp-validation-for="Excipients" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PharmaceuticalForm"></label>
                <select asp-for="PharmaceuticalForm" asp-items="Html.GetEnumSelectList<PharmaceuticalFormType>()" selected="@Model.PharmaceuticalForm.GetType()" class="form-control"></select>
                <span asp-validation-for="PharmaceuticalForm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usage"></label>
                <input asp-for="Usage" class="form-control">
                <span asp-validation-for="Usage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DrugGroupId"></label>
                <select asp-for="DrugGroupId" asp-items="Model.DrugGroups" selected="@Model.DrugGroup" class="form-control"></select>
                <span asp-validation-for="DrugGroupId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BrandId"></label>
                <select asp-for="BrandId" asp-items="Model.Brands" selected="@Model.Brand" class="form-control"></select>
                <span asp-validation-for="BrandId" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-warning">Update Drug</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}



